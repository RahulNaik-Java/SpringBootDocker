pipeline {
    agent any
    tools {
        maven "local"
        jdk "local_java_19"
    }
    stages {
        stage('Build Application') {
            steps {
                sh 'mvn -f SpringBootDocker/pom.xml clean package'
            }
            post {
                success {
                    echo "Now Archiving the Artifacts...."
                    archiveArtifacts artifacts: '**/*.war'
                }
            }
        }
    }
}


